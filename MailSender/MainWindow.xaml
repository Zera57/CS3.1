<Window x:Class="MailSender.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:MailSender"
		mc:Ignorable="d"
		Title="WpfTestMailSender" Height="380" Width="600" MinWidth="475" MaxWidth="600" MaxHeight="400">
	<DockPanel>
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="File">
				<MenuItem Header="Create"/>
				<MenuItem Header="Open"/>
				<MenuItem Header="Close"/>
				<MenuItem Header="Save"/>
				<Separator/>
				<MenuItem Header="Exit"/>
			</MenuItem>
			<MenuItem Header="Service">
				<MenuItem Header="Parametrs"/>
			</MenuItem>
			<MenuItem Header="Help">
				<MenuItem Header="About"/>
			</MenuItem>
		</Menu>
		<StatusBar DockPanel.Dock="Bottom">
			<StatusBarItem DockPanel.Dock="Right">
				<ResizeGrip/>
			</StatusBarItem>
			<StatusBarItem>
				<TextBlock Text="Ready!"/>
			</StatusBarItem>
		</StatusBar>
		<TabControl>
			<TabItem Header="Списки">
				<DockPanel>
					<ToolBarTray DockPanel.Dock="Top">
						<ToolBar Header="Сервера" Band="0">
							<ComboBox Margin="26.5,0,0,0" MinWidth="120" MaxWidth="220"/>
							<Button Content="Add"/>
							<Button Content="Edit"/>
							<Button Content="Del"/>
						</ToolBar>
						<ToolBar Header="Отправители" Band="1">
							<ComboBox MinWidth="120" MaxWidth="220"/>
							<Button Content="Add"/>
							<Button Content="Edit"/>
							<Button Content="Del"/>
						</ToolBar>
						<ToolBar Header="Перейти в планировщик" Band="0">
							<Button Content="Перейти в планировщик"/>
						</ToolBar>
						<ToolBar Header="Получатели" Band="1">
							<Button Content="Add"/>
							<Button Content="Edit"/>
							<Button Content="Del"/>
						</ToolBar>
					</ToolBarTray>
					<GroupBox Header="Список получателей">
						<DataGrid>
							
						</DataGrid>
					</GroupBox>
				</DockPanel>
			</TabItem>
			<TabItem Header="Планировщик">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition/>
					</Grid.ColumnDefinitions>
					<GroupBox Grid.Column="0" Header="Управление">
						<StackPanel>
							<Calendar/>
							<StackPanel>
							  <Button Content="Отправить"/>
							  <Button Content="Запланировать"/>
							</StackPanel>
						</StackPanel>
					</GroupBox>
					<GroupBox Grid.Column="1" Header="Задания">
                        <ListBox></ListBox>
					</GroupBox>
                    <GridSplitter Grid.Column="0" HorizontalAlignment="Right" Width="3" Background="Transparent"/>
                </Grid>
			</TabItem>
			<TabItem Header="Письма"></TabItem>
			<TabItem Header="Статистика"></TabItem>
		</TabControl>
	</DockPanel>
</Window>
